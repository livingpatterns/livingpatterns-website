 author = {Ramirez-San Juan, Guillermina R. and Minzoni, Antonmaria A. and Islas, Leon D.},
 doi = {10.1103/PhysRevE.88.012720},
 issue = {1},
 journal = {Phys. Rev. E},
 month = {Jul},
 numpages = {7},
 pages = {012720},
 publisher = {American Physical Society},
 title = {Effects of electrical polarization on the opening rate constant of a voltage-gated ion channel},
 volume = {88},
 year = {2013}
}

